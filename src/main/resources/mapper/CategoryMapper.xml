<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ms.blog.dao.CategoryMapper">
    <insert id="insertCategory">
        INSERT INTO b_category
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name!=null">
                b_category.name
            </if>
            <if test="createDate!=null">
                create_time
            </if>
            <if test="updateDate"></if>
        </trim>
    </insert>
    <update id="updateCategory"></update>
    <update id="updateCategoryClickVolume"></update>
    <delete id="deleteCategory"></delete>

    <select id="getCategoryById" resultType="com.ms.blog.entity.Category"></select>
    <select id="getCategoryByName" resultType="com.ms.blog.entity.Category"></select>
    <select id="getCategoryList" resultType="com.ms.blog.entity.Category"></select>
</mapper>